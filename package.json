{
  "name": "ai-product-playbook",
  "version": "0.1.0",
  "description": "LLM-Maintained Enterprise Playbook â€” monorepo for multi-platform product",
  "type": "module",
  "private": true,
  "packageManager": "npm@10.9.4",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check": "turbo run type-check lint test",
    "test:e2e": "playwright test",
    "test:e2e:fullstack": "playwright test --config=playwright.e2e.config.ts",
    "test:contract": "vitest run --config vitest.e2e.config.ts",
    "dev:local": "bash scripts/dev-local.sh",
    "dev:check": "bash scripts/dev-local.sh --check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.50.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/nextjs": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "storybook": "^8.5.0",
    "turbo": "^2.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1",
    "vitest": "^3.0.0"
  }
}
