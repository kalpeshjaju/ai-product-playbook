{
  "name": "ai-product-playbook",
  "version": "0.1.0",
  "description": "LLM-Maintained Enterprise Playbook â€” monorepo for multi-platform product",
  "type": "module",
  "private": true,
  "packageManager": "npm@10.9.4",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "check": "turbo run type-check lint test",
    "test:e2e": "playwright test",
    "test:e2e:fullstack": "playwright test --config=playwright.e2e.config.ts",
    "test:contract": "vitest run --config vitest.e2e.config.ts",
    "test:load": "k6 run tests/load/api-load.js",
    "test:load:smoke": "k6 run --scenario smoke tests/load/api-load.js",
    "dev:local": "bash scripts/dev-local.sh",
    "dev:check": "bash scripts/dev-local.sh --check",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "overrides": {
    "form-data": "^4.0.5",
    "axios": "^1.13.5",
    "qs": "^6.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@next/eslint-plugin-next": "^15.0.0",
    "@playwright/test": "^1.50.0",
    "@storybook/addon-docs": "^10.2.13",
    "@storybook/nextjs-vite": "10.2.13",
    "@storybook/react": "^10.2.13",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/eslint-plugin": "^1.6.9",
    "ajv": "^8.18.0",
    "chromatic": "^15.2.0",
    "eslint": "^9.0.0",
    "eslint-plugin-storybook": "10.2.13",
    "storybook": "^10.2.13",
    "turbo": "^2.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@vercel/speed-insights": "^1.3.1"
  }
}
