FROM node:22-slim

WORKDIR /app

# Copy package files for install
COPY package.json package-lock.json turbo.json tsconfig.base.json ./
COPY apps/api/package.json apps/api/tsconfig.json apps/api/
COPY packages/shared-types/package.json packages/shared-types/tsconfig.json packages/shared-types/
COPY packages/shared-llm/package.json packages/shared-llm/tsconfig.json packages/shared-llm/

# Install dependencies
RUN npm install --legacy-peer-deps

# Copy source code
COPY packages/shared-types/src/ packages/shared-types/src/
COPY packages/shared-llm/src/ packages/shared-llm/src/
COPY apps/api/src/ apps/api/src/

# Build
RUN npx turbo run build --filter=@playbook/api

EXPOSE 3002
ENV PORT=3002

CMD ["node", "apps/api/dist/server.js"]
