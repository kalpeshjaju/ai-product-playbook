FROM node:22-slim

WORKDIR /app

# Create non-root user
RUN groupadd -r appuser && useradd -r -g appuser -s /bin/false appuser

# Copy package files for install
COPY package.json package-lock.json turbo.json tsconfig.base.json ./
COPY apps/api/package.json apps/api/tsconfig.json apps/api/drizzle.config.ts apps/api/
COPY packages/shared-types/package.json packages/shared-types/tsconfig.json packages/shared-types/
COPY packages/shared-llm/package.json packages/shared-llm/tsconfig.json packages/shared-llm/

# Install dependencies (deterministic install)
RUN npm ci --legacy-peer-deps

# Copy source code
COPY packages/shared-types/src/ packages/shared-types/src/
COPY packages/shared-llm/src/ packages/shared-llm/src/
COPY apps/api/src/ apps/api/src/

# Copy Drizzle migrations if they exist
COPY apps/api/drizzle/ apps/api/drizzle/

# Build
RUN npx turbo run build --filter=@playbook/api...

# Switch to non-root user
USER appuser

EXPOSE 3002
ENV PORT=3002
ENV NODE_ENV=production

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
  CMD node -e "fetch('http://localhost:3002/api/health').then(r => { if (!r.ok) process.exit(1); }).catch(() => process.exit(1))"

CMD ["node", "apps/api/dist/server.js"]
